<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/favlayout">


    <ImageView
        android:id="@+id/favcatthumbnail"
        android:layout_width="76dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/favlayot"
        android:layout_width="259dp"
        android:layout_height="107dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Event Name"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favevenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue name" />

        <TextView
            android:id="@+id/favetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Time" />

        <TextView
            android:id="@+id/faveID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event ID"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/faveLatLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Latitude"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/favorite"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/heart_fill_red" />

</LinearLayout>