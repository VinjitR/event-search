<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/eventsLinearLayout">


    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="103dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fav_event_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fav_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue name" />

        <TextView
            android:id="@+id/fav_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Time" />

        <TextView
            android:id="@+id/eventID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event ID"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/eventLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Latitude"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/eventLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Longitude"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/favorite"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/heart_fill_red" />

</LinearLayout>